         "properties":{
            "city":{
               "type":"string",
               "example":"sydney"
            },
            "country":{
               "type":"string",
               "example":"Australia"
            },
            "postalCode":{
               "type":"number",
               "example":2060.0
            },
            "state":{
               "type":"string",
               "example":"NSW"
